<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="800.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ViewControllers.PlainsScene">
   <children>
      <ImageView fitHeight="800.0" fitWidth="800.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Images/Backgrounds/PlainsBG.png" />
         </image>
      </ImageView>
      <Label layoutX="538.0" layoutY="149.0" onMouseClicked="#enterGymButton" prefHeight="250.0" prefWidth="239.0" />
      <Label fx:id="pokemartButton" layoutX="28.0" layoutY="346.0" onMouseClicked="#enterPokemartButton" prefHeight="168.0" prefWidth="174.0" />
      <ImageView fx:id="wildFightButton" fitHeight="150.0" fitWidth="200.0" layoutX="642.0" layoutY="636.0" onMouseClicked="#startWildFight" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Images/fightIcon.png" />
         </image>
      </ImageView>
      <ImageView fx:id="pokedexButton" fitHeight="121.0" fitWidth="118.0" layoutX="515.0" layoutY="662.0" onMouseClicked="#showPokedex" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Images/pokedexIcon.png" />
         </image>
      </ImageView>
      <ImageView fx:id="mapButton" fitHeight="128.0" fitWidth="127.0" layoutX="389.0" layoutY="652.0" onMouseClicked="#openMapButton" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Images/mapIcon.png" />
         </image>
      </ImageView>
      <ImageView fx:id="noPokemonsWarning" fitHeight="357.0" fitWidth="415.0" layoutX="370.0" layoutY="399.0" pickOnBounds="true" preserveRatio="true" visible="false">
         <image>
            <Image url="@../Images/fightsBG/noPokemonsWarning.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="92.0" fitWidth="103.0" layoutX="681.0" layoutY="29.0" onMouseClicked="#saveFile" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Images/saveFileIcon.png" />
         </image>
      </ImageView>
      <Group fx:id="saveGroup" layoutX="138.0" layoutY="250.0" visible="false">
         <children>
            <ImageView fitHeight="300.0" fitWidth="600.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Images/saveWarning.png" />
               </image>
            </ImageView>
            <Label layoutX="133.0" layoutY="211.0" onMouseClicked="#saveProgress" prefHeight="37.0" prefWidth="93.0" />
            <Label layoutX="301.0" layoutY="211.0" onMouseClicked="#closeSaveWarning" prefHeight="37.0" prefWidth="71.0" />
         </children>
      </Group>
   </children>
</AnchorPane>
